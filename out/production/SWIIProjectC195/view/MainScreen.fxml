<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="control.MainScreenController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="14.0" layoutY="6.0" prefHeight="800.0" prefWidth="1000.0" spacing="10.0">
         <children>
            <Label text="Appointments Overview">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <HBox alignment="BOTTOM_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" prefWidth="100.0" text="Week">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" prefWidth="100.0" text="Month">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
            </HBox>
            <TreeTableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                <TreeTableColumn prefWidth="116.0" text="Appointment_ID" />
                <TreeTableColumn prefWidth="47.0" text="Title" />
                  <TreeTableColumn prefWidth="74.0" text="Description" />
                  <TreeTableColumn prefWidth="63.0" text="Location" />
                  <TreeTableColumn prefWidth="75.0" text="Contact" />
                  <TreeTableColumn prefWidth="75.0" text="Type" />
                  <TreeTableColumn prefWidth="163.0" text="Start Date And Time" />
                  <TreeTableColumn prefWidth="173.0" text="End Date and Time" />
                  <TreeTableColumn prefWidth="83.0" text="Customer_ID" />
                  <TreeTableColumn minWidth="9.0" text="User_ID" />
              </columns>
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TreeTableView>
            <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="manageCustomerAppointments" mnemonicParsing="false" onAction="#onActionOpenManagerScreen" prefWidth="250.0" text="Manage Customer Appointments">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="logout" mnemonicParsing="false" onAction="#onActionReturnToLogin" text="Logout">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onActionExit" prefWidth="50.0" text="Exit">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="25.0" right="25.0" top="200.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
